<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/menuBackground">

    /* Titre du jeu */
    <TextView
        android:id="@+id/titreMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FloppyBird"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:textSize="40dp"/>

    /* Oiseau */
    <ImageView
        android:id="@+id/imageMenu"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="210dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/floppy_bird"/>

    /* Bouton jouer */
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/boutonJouer"
        android:text="JOUER"
        android:layout_below="@id/imageMenu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:textSize="60dp"/>

    /* Logo options */
    <ImageButton
        android:id="@+id/boutonOptions"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/options"
        android:scaleType="centerInside"/>

    /* Bouton custom */
    <ImageButton
        android:id="@+id/boutonCustom"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_toRightOf="@id/boutonOptions"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:src="@mipmap/floppy_bird"
        android:scaleType="centerInside"/>
</RelativeLayout>
